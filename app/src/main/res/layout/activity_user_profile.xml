<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".UserProfile">

    <ImageView
        android:id="@+id/signUpLogo"
        android:layout_width="143dp"
        android:layout_height="64dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/logo" />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="330dp"
        app:srcCompat="@drawable/baseline_menu_64" />
    <TextView
        android:id="@+id/your_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:includeFontPadding="true"
        android:text="@string/your_profile"
        android:textColor="#090909"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/your_name_text"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_profile_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="21dp"
        android:includeFontPadding="true"
        android:text="@string/your_name"
        android:textColor="#090909"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/your_email_text"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_profile_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="239dp"
        android:layout_marginEnd="22dp"
        android:includeFontPadding="true"
        android:text="@string/your_email"
        android:textColor="#090909"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="EMAIL:"
        android:textColor="#090909" />

    <TextView
        android:id="@+id/total_jumps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="TOTAL JUMPS:"
        android:textColor="#090909" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpLogo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="283dp"
        android:text="NAME:"
        android:textColor="#090909" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="146dp"
        android:layout_below="@+id/your_profile_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="134dp"
        tools:srcCompat="@tools:sample/avatars" />



</RelativeLayout>